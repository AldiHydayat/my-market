<div class="container">
  <div class="row">
  </div>
  <div class="d-flex">
    <div class="photo">
      <%= image_tag @product.product_photos.first.photo_url, style: " width:150px; height:auto " %>
    </div>
    <div class="text ms-3">
      <p><%= @product.name %></p>
      <%= form_for @product.reviews.build, url: product_reviews_path do |f| %>
        <%= hidden_field_tag :od, @order_detail.id %>
        Rating
        <div class="form-check">
          <%= f.radio_button :rating, 1, class: "form-check-input" %>
          <%= f.label :rating, "1 Star", class: "form-check-label" %>
        </div>
        <div class="form-check">
          <%= f.radio_button :rating, 2, class: "form-check-input" %>
          <%= f.label :rating, "2 Stars", class: "form-check-label" %>
        </div>
        <div class="form-check">
          <%= f.radio_button :rating, 3, class: "form-check-input" %>
          <%= f.label :rating, "3 Stars", class: "form-check-label" %>
        </div>
        <div class="form-check">
          <%= f.radio_button :rating, 4, class: "form-check-input" %>
          <%= f.label :rating, "4 Stars", class: "form-check-label" %>
        </div>
        <div class="form-check">
          <%= f.radio_button :rating, 5, class: "form-check-input" %>
          <%= f.label :rating, "5 Stars", class: "form-check-label" %>
        </div>
        <br>
        <div class="mb-3">
          <%= f.label :comment, "Comment (Optional)", class: "form-label" %>
          <%= f.text_area :comment, class: "form-control" %>
        </div>
        <%= f.submit "Submit", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
