<div class="row">
  <div class="col-11 offset-1">
    <div class="d-flex flex-column">
      <div class="header d-flex align-items-center justify-content-between">
        <div>
          <span><%= reply.user.name %></span>
          <small class="text-secondary ms-3"><%= discuss.created_at.to_time.strftime('%B %e, %Y') %></small>
        </div>
        <%= (link_to 'Hapus', product_discuss_path(@product, discuss), method: :delete, data: { confirm: "are you sure?" }) if reply.user == current_user %>
      </div>
      <div class="comment">
        <%= simple_format(reply.comment) %>
      </div>
    </div>
  </div>
</div>
