<div class="row">
  <%= form_for @product.discusses.build, url: product_discusses_path do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.text_area :comment, placeholder: "Masukan pertanyaan anda mengenai product ini", class: "form-control #{"is-invalid" if @discuss.errors[:comment].present? }" %>
    <div class="invalid-feedback">
      <%= @discuss.errors[:comment].first if @discuss.errors[:comment].present? %>
    </div>
    <br>
    <%= f.submit "Submit", disable_with: 'Submiting...', class: 'btn btn-primary' %>
  <% end %>
</div>
