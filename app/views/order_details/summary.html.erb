<div class="container">
  <%= link_to 'Lihat Produk', product_path(@summary["id"]) %>
  <div class="row">
    <h3><%= @summary[:name] %></h3>
  </div>
  <div class="row">
    <% @summary["photos"].each do |photo| %>
      <%= image_tag photo, style: " width:200px; height:auto " %>
    <% end %>
  </div>
  <div>
    <h3><%= number_to_currency(@summary["price"], unit: "Rp. ") %></h3>
  </div>
  <div class="row">
    <h4>Description:</h4>
    <%= simple_format(@summary["description"]) %>
  </div>
</div>
