<div class="container">
  <%= link_to 'Lihat Produk', product_path(@summary[:id]) %>
  <div class="row">
    <h3><%= @summary[:name] %></h3>
  </div>
  <div class="row">
    <% @photos.each.with_index do |pp, i| %>
      <%= image_tag pp.photo_url, style: " width:200px; height:auto " %>
    <% end %>
  </div>
  <div>
    <h3><%= number_to_currency(@summary[:price], unit: "Rp. ") %></h3>
  </div>
  <div class="row">
    <h4>Description:</h4>
    <%= simple_format(@summary[:description]) %>
  </div>
  <div class="row">
    <h4>Category: </h4>
    <p>
      <% @product_categories.each do |pc| %>
        <%= pc.category.name %>
      <% end %>
    </p>
  </div>
</div>
